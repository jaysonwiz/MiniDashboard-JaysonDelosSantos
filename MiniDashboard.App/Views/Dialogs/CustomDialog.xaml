<Window x:Class="MiniDashboard.App.Views.Dialogs.CustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:conv="clr-namespace:MiniDashboard.App.Converters"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"  
        Title="{Binding Title}"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <conv:DialogTypeToIconConverter x:Key="DialogTypeToIconConverter"/>
        <conv:DialogTypeToVisibilityConverter x:Key="DialogTypeToVisibilityConverter"/>
        <conv:DialogTypeToColorConverter x:Key="DialogTypeToColorConverter"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="15" BorderBrush="#FFCCCCCC" BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Message -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Header with Icon top-left and Title centered -->
            <Grid Grid.Row="0" Margin="0 0 0 10" Height="40">
                <!-- Icon in top-left -->
                <fa:ImageAwesome Width="32" Height="32"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="0,0,0,0"
                     Icon="{Binding Type, Converter={StaticResource DialogTypeToIconConverter}}"
                     Foreground="{Binding Type, Converter={StaticResource DialogTypeToColorConverter}}"/>

                <!-- Title centered horizontally -->
                <TextBlock Text="{Binding Title}" 
               FontSize="16" 
               FontWeight="Bold" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Center"
               TextAlignment="Center"/>
            </Grid>


            <!-- Message (centered vertically and horizontally) -->
            <TextBlock Text="{Binding Message}" 
                       FontSize="14" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Grid.Row="1"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                <Button Content="OK" Width="80" Height="30" Margin="5"
                        Style="{StaticResource FormButtonSuccess}"
                        Visibility="{Binding Type, Converter={StaticResource DialogTypeToVisibilityConverter}, ConverterParameter=OK}"
                        Click="OkButton_Click"/>
                <Button Content="Cancel" Width="80" Height="30" Margin="5"
                        Style="{StaticResource FormButtonCancel}"
                        Visibility="{Binding Type, Converter={StaticResource DialogTypeToVisibilityConverter}, ConverterParameter=Cancel}"
                        Click="CancelButton_Click"/>
                <Button Content="Yes" Width="80" Height="30" Margin="5"
                        Style="{StaticResource FormButtonSuccess}"
                        Visibility="{Binding Type, Converter={StaticResource DialogTypeToVisibilityConverter}, ConverterParameter=Yes}"
                        Click="YesButton_Click"/>
                <Button Content="No" Width="80" Height="30" Margin="5"
                        Style="{StaticResource FormButtonCancel}"
                        Visibility="{Binding Type, Converter={StaticResource DialogTypeToVisibilityConverter}, ConverterParameter=No}"
                        Click="NoButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

